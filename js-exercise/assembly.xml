<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>js-exercise01</id>
    <formats>
        <!-- zip,tar,tar.gz,tar.bz2,jar,dir,war -->
        <format>zip</format>
    </formats>
    <dependencySets>
        <!-- 依赖包的输出路径 -->
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <!-- 需要打包的文件集 -->
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>/</directory>
            <includes>
                <include>/**</include>
            </includes>
            <excludes>
                <exclude>/target/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
